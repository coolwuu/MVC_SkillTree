@model MVC_SkillTree.Models.AccountBook
@{
    ViewBag.Title = "我的記賬本";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="well">
        @using (Ajax.BeginForm("AddRecord", "Billing", null, new AjaxOptions { UpdateTargetId = "ajaxList" }, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Category, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EnumDropDownListFor(d => d.Category, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Category)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "金額" })
                    @Html.ValidationMessageFor(model => model.Amount)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Date, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "日期" })
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Remark, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Remark, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remark)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
</div>
@Html.Action("ListBillingRecords", "Billing")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/DateTimeValidate.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}