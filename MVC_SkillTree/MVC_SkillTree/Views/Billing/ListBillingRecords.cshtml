@model System.Collections.Generic.IEnumerable<MVC_SkillTree.ViewModels.BillingRecordViewModel>
@using MVC_SkillTree.Helper
@{

    Layout = "";
}

<div class="row">
    <div class="col-md-12" id="ajaxList">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                int i = 1;
            }
            @foreach (var record in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@Html.AddColorByCategory(record)</td>
                    <td>@Html.DisplayFor(model => record.Date)</td>
                    <td>@Html.DisplayFor(model => record.Amount)</td>
                </tr>
            }
          
        </table>
    </div>
</div>
